                                            <a href="member_detail.php?id=<?php echo $member['id']; ?>" class="btn btn-small btn-info">Detail</a>
                                            <a href="edit_member.php?id=<?php echo $member['id']; ?>" class="btn btn-small btn-secondary">Edit</a>
                                        </div>
                                    </div>
                                <?php endforeach; ?>
                            </div>
                        </div>
                    <?php endif; ?>

