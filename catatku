  `submitted_by` int(11) DEFAULT NULL,
  `submitter_name` varchar(100) DEFAULT NULL,
  `submitter_phone` varchar(20) DEFAULT NULL,
  `submitter_relation` varchar(50) DEFAULT NULL,
  `approval_notes` text DEFAULT NULL,
