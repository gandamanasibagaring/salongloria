                        <div class="distribution-fill" style="width: <?php echo $percentage; ?>%"></div>
                    </div>
                    <div class="distribution-percentage"><?php echo $percentage; ?>%</div>
                </div>
                <?php endif; endforeach; ?>
            </div>
        </div>

