<?php
require_once 'config/config.php';

try {
    $conn = getDB();

    // Standardize education data
    $education_mappings = [
        // SD variations
        "sd" => "SD/Sederajat",
        "sekolah dasar" => "SD/Sederajat",
        "elementary" => "SD/Sederajat",
        "elementary school" => "SD/Sederajat",

