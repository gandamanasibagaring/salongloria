                        <?php echo htmlspecialchars($neighborhood['neighborhood_name']); ?>
                        <?php if ($neighborhood['description']): ?>
                            <small>(<?php echo htmlspecialchars($neighborhood['description']); ?>)</small>
                        <?php endif; ?>
                    </span>
                    <?php endforeach; ?>
