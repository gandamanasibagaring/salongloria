                    <?php
                    $members_sql = "SELECT * FROM family_members WHERE family_id = ? ORDER BY relationship, name";
                    $members_stmt = $pdo->prepare($members_sql);
                    $members_stmt->execute([$family['id']]);
                    $members = $members_stmt->fetchAll();
